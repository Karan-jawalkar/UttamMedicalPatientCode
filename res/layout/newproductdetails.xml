<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="#e8f5e9" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="Product No:- "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_product_no_see"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_weight="0.25"
                    android:text="-----"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="Product Name:- "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_PRODUCT_NAME_SEE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="-----"
                    android:textStyle="italic" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="Product Description: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="-----"
                android:textStyle="italic" />
        </LinearLayout>

        <!-- <View -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="1dp" -->
        <!-- android:layout_marginTop="-10dp" -->
        <!-- android:background="#000000" /> -->

        <ImageView
            android:id="@+id/IV_product_photo"
            android:layout_marginTop="70dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:onClick="sendingimage"
            android:src="@drawable/ic_launcher" />

        <!-- android:layout_marginTop="100dp" -->


        <!-- <ImageButton -->
        <!-- android:id="@+id/Btn_IMG_prec_img" -->
        <!-- android:layout_width="100dp" -->
        <!-- android:layout_height="100dp" -->
        <!-- android:layout_gravity="center" -->
        <!-- android:contentDescription="@string/app_name" -->
        <!-- android:src="@drawable/ic_launcher" /> -->
        <!-- android:onClick="imgClick" -->

        <Button
            android:id="@+id/btnproduct_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#4caf50"
            android:onClick="acceptOrder"
            android:layout_marginTop="60dp"
            android:text="Purchase Product" />
    </LinearLayout>

</ScrollView>